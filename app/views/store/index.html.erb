<h1>Your Pragmatic Catalog</h1>
<% @products.each do |product| %>
	<div class="entry" >
		<div class="image-price">
			<%= image_load_tag(product.image_url) %>
			<div class="price_line" >
				price:
				<%= product.price %></span>
			</div>
		</div>	
		<div class="name-desc">
			<h3><%= product.name %></h3>
			<%=sanitize product.description %>
		</div>
	</div>


<% end %>